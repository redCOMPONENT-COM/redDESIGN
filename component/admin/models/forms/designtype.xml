<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="id"
			type="hidden"
			default="0"
			class="readonly"
			readonly="true"
			/>
		<field
			name="name"
			type="text"
			default=""
			label="COM_REDDESIGN_DESIGNTYPE_FIELD_TITLE"
			description="COM_REDDESIGN_DESIGNTYPE_FIELD_TITLE_DESC"
			required="true"
		/>
		<field name="state"
			type="radio"
			label="JPUBLISHED"
			class="btn-group"
			default="1">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		<field name="fontsizer"
			type="list"
			label="COM_REDDESIGN_DESIGNTYPE_FIELD_FONT_SIZE_CONTROLS"
			description="COM_REDDESIGN_DESIGNTYPE_FIELD_FONT_SIZE_CONTROLS_DESC"
			class="chosen input-xxlarge"
			default="1">
			<option value="auto">COM_REDDESIGN_DESIGNTYPE_FIELD_FONT_SIZE_CONTROLS_AUTO</option>
			<option value="auto_chars">COM_REDDESIGN_DESIGNTYPE_FIELD_FONT_SIZE_CONTROLS_AUTO_CHARS</option>
			<option value="slider">COM_REDDESIGN_DESIGNTYPE_FIELD_FONT_SIZE_CONTROLS_SLIDER</option>
			<option value="dropdown_numbers">COM_REDDESIGN_DESIGNTYPE_FIELD_FONT_SIZE_CONTROLS_DROPDOWN_NUMBERS</option>
			<option value="dropdown_labels">COM_REDDESIGN_DESIGNTYPE_FIELD_FONT_SIZE_CONTROLS_DROPDOWN_LABELS</option>
		</field>
	</fieldset>
</form>