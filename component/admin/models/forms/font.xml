<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="id"
			id="id"
			type="hidden"
			default="0"
			label="COM_REDDESIGN_COMMON_ID"
			description="COM_REDDESIGN_COMMON_ID"
			readonly="true"
			/>
		<field
			name="font_file"
			id="font_file"
			type="file"
			label="COM_REDDESIGN_FONT_FIELD_FILE"
			description="COM_REDDESIGN_FONT_FIELD_FILE_DESC"
			class="inputbox"
			/>
		<field
			name="name"
			id="name"
			type="text"
			label="COM_REDDESIGN_FONT_NAME"
			description="COM_REDDESIGN_FONT_NAME_DESC"
			maxlength="255"
			size="32"
			/>
		<field
			name="state"
			id="state"
			type="radio"
			label="JPUBLISHED"
			description="JPUBLISHED"
			class="btn-group"
			default="1"
			>
			<option class="btn" value="1">JYES</option>
			<option class="btn" value="0">JNO</option>
		</field>
		<field
			name="default_width"
			id="default_width"
			type="text"
			label="COM_REDDESIGN_FONT_DEFAULT_WIDTH"
			description="COM_REDDESIGN_FONT_DEFAULT_WIDTH"
			default="1.0"
			maxlength="10"
			size="32"
			required="true"
			/>
		<field
			name="default_height"
			id="default_height"
			type="text"
			label="COM_REDDESIGN_FONT_DEFAULT_HEIGHT"
			description="COM_REDDESIGN_FONT_DEFAULT_HEIGHT"
			default="1.0"
			maxlength="10"
			size="32"
			required="true"
			/>
		<field
			name="default_caps_height"
			id="default_caps_height"
			type="text"
			label="COM_REDDESIGN_FONT_DEFAULT_CAPS_HEIGHT"
			description="COM_REDDESIGN_FONT_DEFAULT_CAPS_HEIGHT"
			default="1.0"
			maxlength="10"
			size="32"
			required="true"
			/>
		<field
			name="default_baseline_height"
			id="default_baseline_height"
			type="text"
			label="COM_REDDESIGN_FONT_DEFAULT_BASELINE_HEIGHT"
			description="COM_REDDESIGN_FONT_DEFAULT_BASELINE_HEIGHT"
			default="1.0"
			maxlength="10"
			size="32"
			required="true"
			/>
	</fieldset>
</form>