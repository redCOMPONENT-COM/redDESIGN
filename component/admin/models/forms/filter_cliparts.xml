<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter" addfieldpath="/libraries/reddesign/form/fields">
		<field
			name="search_cliparts"
			type="text"
			label="COM_REDCORE_FILTER_SEARCH_DESC"
			placeholder="JSEARCH_FILTER"
			class="js-enter-submits"
			/>
        <field
            name="categoryId"
            type="category"
            extension="com_reddesign"
            label="COM_REDDESIGN_CLIPART_CATEGORY_LABEL"
            description="COM_REDDESIGN_CLIPART_CATEGORY_DESC"
            class="select2"
            onchange="this.form.submit();"
            >
            <option value="0">JOPTION_SELECT_CATEGORY</option>
        </field>
	</fields>
	<fields name="list">
		<field
			name="clipart_limit"
			type="rlimitbox"
			class="inputbox input-mini chzn"
			default="25"
			label="JGLOBAL_ORDERING_LIST_LIMIT"
			description="JGLOBAL_ORDERING_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
			/>
	</fields>
</form>
