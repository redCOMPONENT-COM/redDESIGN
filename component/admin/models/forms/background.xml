<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="id"
			id="id"
			type="hidden"
			default="0"
			label="COM_REDDESIGN_COMMON_ID"
			description="COM_REDDESIGN_COMMON_ID"
			readonly="true"
			/>
		<field
			name="name"
			id="name"
			type="text"
			label="COM_REDDESIGN_BACKGROUND_FIELD_TITLE"
			description="COM_REDDESIGN_BACKGROUND_FIELD_TITLE"
			maxlength="255"
			size="32"
			/>
		<field
			name="state"
			id="state"
			type="radio"
			label="JPUBLISHED"
			description="JPUBLISHED"
			class="btn-group"
			default="1"
			>
			<option class="btn" value="1">JYES</option>
			<option class="btn" value="0">JNO</option>
		</field>
		<field
			name="bg_eps_file"
			id="bg_eps_file"
			type="file"
			label="COM_REDDESIGN_BACKGROUND_FIELD_FILE"
			description="COM_REDDESIGN_BACKGROUND_FIELD_FILE"
			class="inputbox"
			/>
		<field
			name="isProductionBg"
			id="isProductionBg"
			type="checkbox"
			label="COM_REDDESIGN_BACKGROUND_IS_PRODUCTION_BACKGROUND"
			description="COM_REDDESIGN_BACKGROUND_IS_PRODUCTION_BACKGROUND"
			default="1"
			/>
		<field
			name="isPreviewBg"
			id="isPreviewBg"
			type="checkbox"
			label="COM_REDDESIGN_BACKGROUND_IS_PREVIEW_BACKGROUND"
			description="COM_REDDESIGN_BACKGROUND_IS_PREVIEW_BACKGROUND"
			default="1"
			/>
		<field
			name="isDefaultPreviewContainer"
			id="isDefaultPreviewContainer"
			type="checkbox"
			label="COM_REDDESIGN_BACKGROUND_DEFAULT_PREVIEW"
			description="COM_REDDESIGN_BACKGROUND_DEFAULT_PREVIEW"
			default="1"
			/>
		<field
			name="useCheckerboardContainer"
			id="useCheckerboardContainer"
			type="checkbox"
			label="COM_REDDESIGN_BACKGROUND_USE_CHECKERBOARD"
			description="COM_REDDESIGN_BACKGROUND_USE_CHECKERBOARD"
			default="1"
			/>
		<field
			name="thumbnail"
			id="thumbnail"
			type="file"
			label="COM_REDDESIGN_COMMON_THUMBNAIL"
			description="COM_REDDESIGN_COMMON_THUMBNAIL"
			class="inputbox"
			/>
	</fieldset>
</form>