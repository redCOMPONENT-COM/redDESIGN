<?xml version="1.0" encoding="utf-8"?>
<form
        type="browse"
        show_header="1"
        show_filters="1"
        show_pagination="1"
        norows_placeholder="COM_REDDESIGN_COMMON_NORECORDS"
        >
    <headerset>
        <header name="ordering" type="ordering" sortable="true" tdwidth="1%"/>
        <header name="reddesign_accessorytype_id" type="rowselect" tdwidth="20"/>
        <header name="title" type="fieldsearchable" sortable="true" buttons="yes" buttonclass="btn"/>
        <header name="enabled" type="published" sortable="true" tdwidth="9%"/>
    </headerset>

    <fieldset name="items">
        <field name="ordering" type="ordering" labelclass="order"/>
        <field name="reddesign_accessorytype_id" type="selectrow"/>
        <field name="title" type="text"
               show_link="true"
               url="index.php?option=com_reddesign&amp;view=accessorytype&amp;id=[ITEM:ID]"
			   empty_replacement="COM_REDDESIGN_COMMON_NO_TITLE"
                />
        <field name="enabled" type="published"/>
    </fieldset>
</form>
