				default="300" />

             <field name="loadBootstrapRedcore"
                    type="radio"
                    label="PLG_REDSHOP_PRODUCT_REDDESIGN_LOAD_BOOTSTRAP"
                    description="PLG_REDSHOP_PRODUCT_REDDESIGN_LOAD_BOOTSTRAP_DESC"
                    default="1">
                 <option value="0">JNO</option>
